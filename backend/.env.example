# ============================================================
# INDAS Exhibition Lead Capture System - Environment Variables
# ============================================================

# Application
APP_NAME="INDAS Exhibition Lead Capture System"
APP_VERSION="1.0.0"
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# MSSQL Database
MSSQL_CONN_STRING="DRIVER={ODBC Driver 17 for SQL Server};SERVER=localhost;DATABASE=ELCS;UID=sa;PWD=YourPassword123"
DB_POOL_SIZE=5
DB_TIMEOUT=30

# OpenAI API
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2000

# WhatsApp Third-Party API Configuration
# Base URL for the WhatsApp API
WHATSAPP_API_URL=http://103.150.136.76:8090

# Your API Key (X-API-Key header) - Get this from user registration/login
WHATSAPP_API_KEY=api_abc123your_user_api_key_here

# Your WhatsApp Account Token (Authorization: Bearer token) - Get this from QR connection
WHATSAPP_ACCOUNT_TOKEN=acc_abc123your_account_token_here

# Your WhatsApp Business Phone Number (with country code)
WHATSAPP_PHONE_NUMBER=+919876543210

# JWT Authentication
JWT_SECRET=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=10

# OCR Settings
# TESSERACT_CMD=C:\\Program Files\\Tesseract-OCR\\tesseract.exe  # Windows
# TESSERACT_CMD=/usr/bin/tesseract  # Linux
OCR_LANGUAGE=eng+hin

# API Settings
API_PREFIX=/api
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# ============================================================
# WhatsApp API Setup Instructions
# ============================================================
#
# Step 1: Register User Account
# POST http://103.150.136.76:8090/api/auth/register
# Body: {
#   "name": "Your Company Name",
#   "mobile": "+919876543210",
#   "password": "your_password"
# }
# Response: You'll get your API Key (save this as WHATSAPP_API_KEY)
#
# Step 2: Start WhatsApp Connection
# POST http://103.150.136.76:8090/api/auth/start-qr-with-user
# Body: { "apiKey": "your_api_key_from_step1" }
# Response: You'll get accountToken and qrCodeUrl
#
# Step 3: Scan QR Code
# Open the qrCodeUrl in browser and scan with WhatsApp
# GET http://103.150.136.76:8090/api/auth/user-token-status/{accountToken}
# Once connected, save the accountToken as WHATSAPP_ACCOUNT_TOKEN
#
# ============================================================
